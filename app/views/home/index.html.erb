<input id="motto_one" value="<%= t :motto_one %>" type="hidden"/>
<input id="motto_two" value="<%= t :motto_two %>" type="hidden"/>
<input id="type_speed" value="<%= t :type_speed %>" type="hidden"/>
<script>
$(function(){ $("#motto").typed({ 
  strings: [document.getElementById('motto_one').value, document.getElementById('motto_two').value], 
  typeSpeed: parseInt(document.getElementById('type_speed').value)
}); }); 
</script>

<div class="container">
  <button id="msg-collapse"><%= t(:msg_unfold) %><%= fa_icon 'angle-down' %></button>
  <div class="msg-panel" style="display: none;">
    <%= form_for Message.new do |f| %>
      <div class="msg-body"><%= f.text_area :body, size: '25', placeholder: t(:msg_placeholder) %></div>
      <div class="msg-author"><%= f.text_field :author, size: '25', placeholder: t(:msg_author) %></div>
      <div class="msg-submit"><%= f.submit t(:submit) %></div>
    <% end %>
  </div>
  <div id="name"><%= t(:renny_ren) %></div>
  <div class="typedjs"><p id="motto"></p></div>
</div>
