<% if @has_error %>
  $('.comment-form .ui.error.message').fadeIn()
<% else %>
  $('.comment-form .ui.error.message').hide();
  $('.comment-form .ui.success.message').fadeIn().delay(2000).fadeOut();
  $('#comment_body')[0].value = '';
  $('.comments-box').append("<%= j(render 'comments/comment', comment: @comment) %>");
<% end %>
