<% if @has_error %>
  $('.comment-form .ui.error.message').fadeIn()
<% else %>
  $('.comment-form .ui.error.message').hide();
  $('.comment-form .ui.success.message').fadeIn().delay(2000).fadeOut();
  $('.cke_wysiwyg_frame').contents().find('body').html('');
  $('#comment_name')[0].value = '';
  $('.comments-box').append("<%= j(render 'comments/comment') %>");
  $('.comment-header').html(" 共有 <%= @owner.comments.size %> 条评论")
  <% if @owner.comments.size == 1 %>
    $($('.ui.horizontal.divider')[0]).removeClass('empty')
    $($('.comments-box')[0]).removeClass('hide')
  <% end %>
<% end %>
